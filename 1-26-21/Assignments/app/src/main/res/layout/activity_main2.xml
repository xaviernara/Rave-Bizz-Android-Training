<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/cardview_dark_background">

    <Button
        android:id="@+id/btn_1"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="2"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:layout_toRightOf="@id/btn_1"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:text="3"
        android:textSize="25dp"
        android:layout_toRightOf="@id/btn_2"
        />

    <Button
        android:id="@+id/btn_4"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="4"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_below="@id/btn_1"
        />

    <Button
        android:id="@+id/btn_5"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="5"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/btn_4"
        android:layout_below="@id/btn_2"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="6"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/btn_5"
        android:layout_below="@id/btn_3"
        />

    <Button
        android:id="@+id/btn_7"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="7"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_below="@id/btn_4"
        />

    <Button
        android:id="@+id/btn_8"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="8"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/btn_7"
        android:layout_below="@id/btn_5"
        />
    <Button
        android:id="@+id/btn_9"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:text="9"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/btn_8"
        android:layout_below="@id/btn_6"
        />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:text="*"
        android:layout_below="@id/btn_7"

        />

    <Button
        android:id="@+id/btn_0"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:text="0"
        android:layout_toRightOf="@id/btn_multiply"
        android:layout_below="@id/btn_8"
        />

    <Button
        android:id="@+id/btn_divide"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:text="#"
        android:layout_toRightOf="@id/btn_0"
        android:layout_below="@id/btn_9"
        />
















</RelativeLayout>